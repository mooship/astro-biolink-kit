---
import Layout from '../layouts/Layout.astro';
import { Content as BioContent } from './bio.md';
---

<Layout title="Timothy Brits">
  <main>
    <BioContent />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 500px;
  }

:global(h1) {
  text-align: center;
  color: #333;
  margin-bottom: 2rem;
}

:global(h2) {
  text-align: center;
  color: #333;
  margin: 2rem 2rem;
}

:global(ul) {
  list-style-type: none;
  padding: 0;
}

:global(li) {
  margin-bottom: 1rem;
}

:global(a) {
  display: flex;
  align-items: center;
  padding: 1rem;
  background-color: #d1d5db;
  border-radius: 8px;
  text-decoration: none;
  color: #333;
  transition: all 0.3s ease;
  border: 3px solid #333;
}

:global(a:hover) {
  border-color: #3498db;
  background-color: #ffffff;
  text-decoration: none;
}

:global(a i) {
  margin-right: 15px;
  font-size: 1.2em;
  width: 20px;
  text-align: center;
  transition: color 0.3s ease;
}

:global(a span) {
  flex-grow: 1;
  text-align: center;
}

/* Email card */
:global(a[href="mailto:brits@fastmail.com"]) {
  background-color: #666;
  border-color: #333;
  color: white;
}

/* Hover state for cards */
:global(a:hover .fa-linkedin) {
  color: #0077b5;
}
:global(a:hover .fa-github) {
  color: #24292e;
}
:global(a:hover .fa-instagram) {
  color: #e1306c;
}
:global(a:hover .fa-hand-holding-heart) {
  color: #e0396b;
}
:global(a:hover .fa-dog) {
  color: #0f7c4a;
}

:global(a[href="mailto:brits@fastmail.com"]:hover) {
  background-color: #999;
  color: #333;
  border-color: #3498db;
}
</style>